@model ExamenFinalCalidadJCGM.Models.GastosC

@{ ViewData["Title"] = "Create";
                var cuenta = ViewBag.Cuenta; }

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nuevos Gastos</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">

                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="CuentaId" class="control-label">Número Cuenta</label>
                            <select asp-for="CuentaId" id="CuentaId" class="form-control">
                                <option>Seleccionar Cuenta</option>
                                @foreach (var item in cuenta)
                                {
                    <option value="@item.Id">@item.Nombre</option>}
                            </select>
                            <span asp-validation-for="CuentaId" class="text-danger"></span>
                        </div>


                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label">Descripción</label>
                            <input asp-for="Descripcion" id="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Monto" class="control-label"></label>
                            <input asp-for="Monto" id="Monto" class="form-control" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="registrarGastos" value="Registrar Gastos" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" /> }
}